# Unbind <esc><esc> which is default for the sudo plugin to enable VIM normal mode
bindkey "\e\e" :

# Toggle sudo with <ctrl>-s
bindkey "^a" sudo-command-line

# VIM keybindings
bindkey -v

bindkey '^h' backward-delete-char
bindkey '^w' backward-kill-word

# Display "[NORMAL]" on the right side of the prompt when in normal mode
function zle-line-init zle-keymap-select {
    VIM_PROMPT="%{$fg_bold[yellow]%} [% NORMAL]%  %{$reset_color%}"
    RPS1="${${KEYMAP/vicmd/$VIM_PROMPT}/(main|viins)/} $EPS1"
    zle reset-prompt
}

zle -N zle-line-init
zle -N zle-keymap-select
export KEYTIMEOUT=1

# Allow <ctrl>-s without freezing the terminal
stty -ixon -ixoff
